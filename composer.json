        "symfony/polyfill-intl-idn": ">=1.32.0",
        "symfony/polyfill-intl-normalizer": ">=1.32.0",
        "symfony/polyfill-mbstring": ">=1.32.0",
        "symfony/polyfill-php72": ">=1.31.0",
