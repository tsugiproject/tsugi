        "php": ">=8.4.0",
        "phpseclib/phpseclib": "v3.0.43",
        "firebase/php-jwt" : "v6.11.1",
        "nikic/fast-route": "^1.3",
        "ezyang/htmlpurifier": "v4.18.0",

        "google/auth": ">=v1.47.0",
        "google/apiclient": ">=v2.18.3",
        "google/apiclient-services": ">=v0.396.0",

        "nesbot/carbon" : ">=v3.9.1",

        "symfony/routing" : ">=7.2.3",
        "symfony/http-foundation" : ">=7.3.7",
        "monolog/monolog" : ">=3.9.0",
        "symfony/translation" : ">=7.3.7",
        "symfony/browser-kit" : ">=7.2.4",
